<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.pratilipi">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application android:allowBackup="true"
                 android:name="com.example.pratilipi.PratilipiApp"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme">
        <activity android:name="com.example.pratilipi.views.contactlist.ContactListActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.detail.DetailActivity"
                  android:screenOrientation="portrait"></activity>
    </application>
</manifest>
